                            <div class="w-[48%]">
                                <label for="prime" class="block text-sm/6 font-medium text-gray-900">Prime</label>
                                <div class="mt-2">
                                    <input type="number" name="prime" id="prime" autocomplete="transportService" class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
